{% extends 'BaseballBundle::layout.html.twig' %}
{% block body %}
<h1>BaseBall Bundle</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Team List</h3>
                </div>
                <div class="panel-body">
{% for team in teams %}
   {# {{ players.firstName }} #}
    ID: {{ team.id }}
    <br/>
    City: {{ team.city }}
    <br />
    Name: {{ team.name }}
    <br />
    <a href="{{ path("delete_team",{id: team.id}) }}" class="btn btn-danger">Delete {{ team.name }}</a>
    <a href="{{ path("edit_team",{id: team.id}) }}" class="btn btn-info">Edit {{ team.name }}</a>
    <br />
{% endfor %}
    <p></p>
<a href="{{ path("create_team") }}" class="btn btn-primary">Create Team</a>
    </div>
    </div>
    </div>
    </div>
{% endblock %}




